name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main # or the branch you want to deploy from

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Replace environment variables in app.js
      run: |
        # Replace placeholders in app.js with environment variables
        sed -i 's/YOUR_FIREBASE_API_KEY/${{ secrets.FIREBASE_API_KEY }}/g' js/app.js
        sed -i 's/YOUR_FIREBASE_AUTH_DOMAIN/${{ secrets.FIREBASE_AUTH_DOMAIN }}/g' js/app.js
        sed -i 's/YOUR_FIREBASE_PROJECT_ID/${{ secrets.FIREBASE_PROJECT_ID }}/g' js/app.js
        sed -i 's/YOUR_FIREBASE_STORAGE_BUCKET/${{ secrets.FIREBASE_STORAGE_BUCKET }}/g' js/app.js
        sed -i 's/YOUR_FIREBASE_MESSAGING_SENDER_ID/${{ secrets.FIREBASE_MESSAGING_SENDER_ID }}/g' js/app.js
        sed -i 's/YOUR_FIREBASE_APP_ID/${{ secrets.FIREBASE_APP_ID }}/g' js/app.js
        sed -i 's/YOUR_FIREBASE_MEASUREMENT_ID/${{ secrets.FIREBASE_MEASUREMENT_ID }}/g' js/app.js

    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./ # Deploy everything in the root directory
